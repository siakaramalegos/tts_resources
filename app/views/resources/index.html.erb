<p id="notice"><%= notice %></p>

<h1>Great Web Dev Resources</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= link_to resource.title, resource.link, target: "_blank", :class => "resource-link" %></td>
        <td><%= resource.notes %></td>
        <td><%= resource.category.name %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource), :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Delete', resource, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_resource_path, :class => "btn btn-default", type: "button" %>
